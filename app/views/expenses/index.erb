<% if !@expenses.empty? %>
    <header class="navbar navbar-expand-md navbar-dark bg-dark">
                <a class="navbar-brand" href="/">Expenses (Total:$<%= sprintf("%.2f", Item.total(session[:user_id])) %>)</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarToggler">
                <a href="/expenses/new"><button type="button" class="btn btn-info float-right">Add Expense</button></a>
                </div>
    </header>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Purchase Date</th>
                <th scope="col">Expense</th>
                <th scope="col">Category</th>
                <th scope="col">Cost</th>
                <th scope="col">Purchased From</th>
            </tr>
        </thead>
        <tbody>
            <% @expenses.each do |expense| %>
                    <tr>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.purchase_date %></a></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.name %></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.category %></a></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.cost %></a></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.purchased_from %></a></td>
                    </tr>
            <% end %>
        </tbody>
    </table>


<% else %>
<header class="border border-dark rounded">
<h2>Expenses (Total: $0)</h2>
<p>No expenses added, please <a href="/expenses/new">click here</a> to add an expense.</p>
</header>
<% end %>