<header class="navbar navbar-expand-md navbar-dark bg-dark">
            <a class="navbar-brand" href="/expenses">Expenses (Total:$<%= sprintf("%.2f", Item.total(session[:user_id])) %>)</a>
            <a href="/expenses/new"><button type="button" class="btn btn-info float-right">Add Expense</button></a>
</header>

<% if !@expenses.empty? %>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Purchase Date</th>
                <th scope="col">Expense</th>
                <th scope="col">Category</th>
                <th scope="col">Cost</th>
                <th scope="col">Purchased From</th>
            </tr>
        </thead>
        <tbody>
            <% @expenses.each do |expense| %>
                    <tr>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.purchase_date %></a></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.name %></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.category %></a></td>
                        <td><a href="/expenses/<%= expense.id %>">$<%= sprintf("%.2f",expense.cost) %></a></td>
                        <td><a href="/expenses/<%= expense.id %>"><%= expense.purchased_from %></a></td>
                    </tr>
            <% end %>
        </tbody>
    </table>

<% else %>
<header class="border border-dark rounded">
<p>No expenses added, please <a href="/expenses/new">click here</a> to add an expense.</p>
</header>
<% end %>