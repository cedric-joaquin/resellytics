<header class="navbar navbar-expand-md navbar-dark bg-dark">
            <a class="navbar-brand" href="/inventory">Inventory (Total: $<%= sprintf("%.2f", Item.total(session[:user_id])) %>)</a>
            <a href="/items/new"><button type="button" class="btn btn-info float-right">Add Item</button></a>
</header>

<% if !@items.empty?%>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Purchase Date</th>
                <th scope="col">Item</th>
                <th scope="col">Brand</th>
                <th scope="col">Size</th>
                <th scope="col">Cost</th>
                <th scope="col">Purchased From</th>
            </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
            <tr>
                <td><a href="/items/<%= item.id %>"><%= item.purchase_date %></a></td>
                <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
                <td><a href="/items/<%= item.id %>"><%= item.brand %></a></td>
                <td><a href="/items/<%= item.id %>"><%= item.size %></a></td>
                <td><a href="/items/<%= item.id %>">$<%= sprintf("%.2f",item.cost) %></a></td>
                <td><a href="/items/<%= item.id %>"><%= item.purchased_from %></a></td>
            </tr>
        <% end %>
        </tbody>
    </table>
    
<% else %>
<p>No items added, please <a href="/items/new">click here</a> to add an item.</p>
<% end %>