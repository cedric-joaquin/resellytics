<header class="navbar navbar-expand-md navbar-dark bg-dark">
            <span class="navbar-brand">Add an Item</span>
</header>

<div class="p-3">
    <div class="form-group">
        <form method="POST" action="/items">
        <label for="name">Item Name</label>
        <p><input type="text" class="form-control" name="name" id="name" required="true"></p>
        <label for="brand">Brand</label>
        <p><input type="text" class="form-control" name="brand" id="brand" required="true"></p>
        <label for="size">Size</label>
        <p><input type="text" class="form-control" name="size" id="size" required="true"></p>
        <label for="cost">Cost ($)</label>
        <p><input type="number" class="form-control" step="0.01" name="cost" id="cost" required="true"></p>
        <label for="purchased_from">Purchased From</label>
        <p><input type="text" class="form-control" name="purchased_from" id="purchased_from" required="true"></p>
        <label for="purchase_date">Purchase Date</label>
        <p><input type="date" class="form-control" name="purchase_date" id="purchase_date" required="true" value="<%= DateTime.now.strftime('%Y-%m-%d')%>"></p>
        <button class="btn btn-primary" type="submit">Add Item</button>
        </form>
    </div>
</div>